<div class="col-md-4">

    <%= link_to maze_intro_path(itinerary) do %>
      <div class="card maze-cards-index">

        <div class="view overlay hm-white-slight">
            <%= image_tag itinerary.image.url(:medium), width: '100%', class: 'image-fluid cursor' %>

            <div class="mask"></div>

        </div>

        <div class="btn-floating btn-action"><i class="fa fa-chevron-right" id="rotate"></i></div>

        <div class="card-body">
            <h4 class="card-title"><%= itinerary.title %></h4>
            <hr>
            <p class="card-text"><%= itinerary.description %></p>
        </div>

        <div class="card-data">
            <ul class="icon-float">
                <li class="move-center"><i class="fa fa-clock-o"></i><%= itinerary.created_at.strftime('%m/%d/%Y') %></li>
                <li class="move-right"><a href="#"><i class="fa fa-comments-o right-side"></i><%= itinerary.reviews.count %></a></li>
                <li><a href="#"><i class="fa fa-star-o"></i><%= itinerary.favoritors.count %></a></li>
            </ul>
        </div>

    </div>
    <% end %>
</div>
